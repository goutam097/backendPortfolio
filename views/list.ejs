<link rel="stylesheet" href="/css/style.css">
<meta charset="UTF-8">
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<style>
  .container {
    text-align: center;
    background-image: linear-gradient(to right, rgba(255, 0, 0, 0), rgba(255, 0, 0, 1));
    background-color: hsla(120, 100%, 50%, 0.3);
  }

  .csv {
    margin-top: 40px;
    margin-right: 80%;
  }
</style>
</head>

<body>
  
  
  
  <div class="container">
    <th><a style="    float: right;
      margin-top: 2%;" href="/display" class="btn btn-primary"><span>+</span></a></th>
    <h1>Product Form</h1>
    <%if(data.length>0){%>
      <table class="table table-striped">

        <!-- Download csv Design start -->
        <!-- <a href="" class="btn btn-success csv"><i class="fa fa-cloud-download"></i> Download CSV</a> -->
        <!-- Download csv Design end -->

        <div class="text-right mt-0">
          <form class="header-searchbox2">
            <input type="text" name="search" id="search" placeholder="Search..">
            <button class="btn btn-danger"><i class="fa fa-search" aria-hidden="true">Search</i></button>
          </form>
        </div>



        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">SL</th>
            <th scope="col">Name</th>
            <th scope="col">email</th>
            <th scope="col">Password</th>
            <th scope="col">Description</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
            <!-- <th><a href="/display" class="btn btn-primary"><span>+</span></a></th> -->
        </thead>
        <tbody>
          <%for(let a of data){%>
            <tr>
              <th scope="row"></th>
              <td>
                <%=a.id%>
              </td>
              <td>
                <%=a.name%>
              </td>
              <td>
                <%=a.email%>
              </td>
              <td>
                <%=a.password%>
              </td>
              <td>
                <%=a.description%>
              </td>
              <td><a href="/display/<%= a.id %>" class="btn btn-primary">Edit</a></td>
              <td><a href="/delete/<%= a.id %>" class="btn btn-danger">Delete</a></td>
              <td></td>
            </tr>
            <%}%>
        </tbody>
      </table>
      <%}else{%>
        <h1>Data Not Found</h1>
        <%}%>
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item"><a class="page-link" href="#">Previous</a></li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item"><a class="page-link" href="#">Next</a></li>
            </ul>
          </nav>
  </div>